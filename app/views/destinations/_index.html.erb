<% if destinations != [] %>
  <ul>
    <% destinations.each do |destination| %>
      <li><%= link_to destination.name, destination_path(destination) %> - <%= link_to 'Edit', edit_destination_path(destination) %></li>
    <% end %>
  </ul>

  <div><%= button_to 'Add a destination', new_destination_path, class: 'btn btn-primary', method: :get %></div>
<% else %>
  <div><h3>You haven't added any destinations to your bucket list yet!</h3></div>
  <div><%= button_to 'Add a destination', new_destination_path, class: 'btn btn-primary', method: :get %></div>
<% end %>
