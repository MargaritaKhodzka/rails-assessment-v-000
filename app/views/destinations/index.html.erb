<h3>My destinations:</h3>

  <ul>
    <% @destinations.each do |destination| %>
      <li><%= link_to destination.name, destination_path(destination) %></li>
      <% if current_user %>
        <%= link_to destination_visited_index_path(destination_id: destination.id, user_id: current_user), method: :post do %>
        <% end %>
      <% end %>
    <% end %>
  </ul>


<%= button_to 'Add a destination', new_destination_path, class: 'btn btn-primary', method: :get %>
