<h1><%= @destination.name.upcase %></h1>
<h3><%= @destination.description %></h3>

<h4>Categories:</h4>
<ul>
<% @destination.categories.each do |category| %>
  <li><%= category.title %></li>
<% end %>
</ul>

<% if @destination.visited %>
  <p>You visited this destination!</p>
<% else %>
  <p>You have not visited this destination yet.</p>
<% end %>

<%= link_to "Edit Destination", edit_destination_path(@destination) %><br>
<%= link_to 'Delete Destination', destination_path(@destination), method: :delete, data: {confirm: 'Are you sure you want to delete this destination?'} %>
