<%= link_to("Next Destination", @destination.next) if @destination.next %>

<p><%= @destination.name %></p>
<p><%= @destination.description %></p>
<p><%= @destination.country %></p>
<p><%= @destination.best_season_to_visit %></p>
<ol>
  <% @destination.categories.each do |destination_category| %>
    <li><%= destination_category.title %></li>
  <% end %>
</ol>

<%= link_to "Back", root_path, class: "btn btn-default" %>
<%= link_to "Edit", edit_destination_path, class: "btn btn-default" %>
<%= link_to "Delete", destination_path, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-default" %>

<div class="notes-content">
  <ol><%= render @destination.notes %></ol>
</div>
<div>
  <%= render partial: 'notes/form', locals: { note: @note }%>
</div>
