<a href="#" class="js-next" data-id="<%= @destination.id %>">Next Destination</a>

<h2 class="name"><%= @destination.name %></h2>
<p class="description">Description: <%= @destination.description %></p>
<p class="country">Country: <%= @destination.country %></p>
<p class="best_season_to_visit">Best season to visit: <%= @destination.best_season_to_visit %></p>

<% if @destination.visited %>
  <p><strong>You visited this destination!</strong></p>
<% else %>
  <p><strong>You have not visited this destination yet.</strong></p>
<% end %>

<h3>Destination categories:</h3>

<div id="categories">
  <% @destination.categories.each do |category| %>
      <li><%= link_to category.title, destination_category_path(@destination, category) %></li>
      <ul>
        <li>Climate: <%= category.climate %></li>
        <li>Must have items: <%= category.must_have_items %></li>
      </ul>
    <% end %>
</div>

<div class="add-category">
  <%= link_to "Add a new category to this destination", new_destination_category_path(@destination) %>
</div>
<br><br>

<div class="edit-link">
  <%= link_to "Edit", edit_destination_path(@destination) %>
</div>

<div class="delete-link">
  <%= link_to "Delete", destination_path(@destination), method: :delete, data: { confirm: "Are you sure you want to delete this destination?" } %>
</div>

<%= javascript_include_tag "destinations" %>
