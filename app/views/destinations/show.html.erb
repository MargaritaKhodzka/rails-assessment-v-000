<h3><%= @destination.name.upcase %></h3>
<p><%= @destination.description %></p>

<h4>Categories:</h4>
<ul>
<% @destination.categories.each do |category| %>
  <li><%= link_to "#{category.title}", destination_category_path(@destination) %></li>
<% end %>
</ul>

<% if @destination.visited %>
  <p>You visited this destination!</p>
<% else %>
  <p>You have not visited this destination yet.</p>
<% end %>

<%= link_to "Edit Destination", edit_destination_path(@destination) %><br>
<%= link_to 'Delete Destination', destination_path(@destination), method: :delete, data: {confirm: 'Are you sure you want to delete this destination?'} %><br>
<%= link_to "Back", destinations_path %>
