<h2><%= @destination.name.upcase %></h2>
<p>Description: <%= @destination.description %></p>
<p>Country: <%= @destination.country %></p>
<p>Best season to visit: <%= @destination.best_season_to_visit %></p>

<% if @destination.visited %>
  <p><strong>You visited this destination!</strong></p>
<% else %>
  <p><strong>You have not visited this destination yet.</strong></p>
<% end %>

<h3>Destination categories:</h3>

<div id="categories"></div>

<%= button_to 'Add a category', new_destination_category_path(@destination), class: 'btn btn-primary', method: :get %>

<%= javascript_include_tag "destinations" %>
<br><br>

<%= link_to 'Edit', edit_destination_path(@destination) %> - <%= link_to 'Delete', destination_path(@destination), method: :delete, data: { confirm: "Are you sure you want to delete this destination?" } %> - <%= link_to 'Back', destinations_path(@destination) %>
