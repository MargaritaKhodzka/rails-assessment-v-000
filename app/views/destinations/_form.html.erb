<%= form_for (@destination) do |f| %>
  <%= f.label :name %>
  <%= f.hidden_field :user_id %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br><br>
  <%= f.check_box :visited %>
  <%= label :visited, "Check box if you visited this destination." %><br>

<p>Add a category to your destination (beach, city, mountains, etc):</p>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :title %>
  <%= f.fields_for :categories, @destination.categories.build do |categories_fields| %><br>
    <%= categories_fields.text_field :title %>
  <% end %>
  <br><br>

  <%= f.submit %>
<% end %>

<%= link_to "Back", destinations_path %>
