<% if @destination.errors.any? %>
  <ul>
  <% @destination.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for @destination do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br><br>
  <%= f.check_box :visited %> &nbsp;
  <%= label :visited, "Check box if you visited this destination." %><br>

  <p>Add a category to your destination (beach, city, mountains, etc):</p>
  <%= f.fields_for :categories do |category_builder| %>
    <%= category_builder.label :title %>
    <%= category_builder.text_field :title %>
  <% end %>
  <br><br>

  <%= f.submit %>
<% end %>
