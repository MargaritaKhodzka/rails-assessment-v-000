<%= render 'layouts/form_messages', object: destination %>

<%= form_for destination do |f| %>
  <%= f.hidden_field :user_id %>

  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :coutry %>
  <%= f.text_area :country, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :best_season_to_visit %>
  <%= f.text_area :best_season_to_visit, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.check_box :visited %>
  <%= label :visited, "Check box if you visited this destination.", class: 'form-control' %><br>
  </div>

  <div class="form-group">
  <%= f.collection_check_boxes :category_ids, :categories, :id, :title %>
  </div>

  <%= f.fields_for :categories, destination.categories.build do |c| %>

    <div class="form-group">
    <%= c.label :title %>
    <%= c.text_area :title, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= c.label :climate %>
    <%= c.text_area :climate, class: 'form-control' %>
    </div>

    <div class="form-group">
    <%= f.label :must_have_items %>
    <%= f.text_area :must_have_items, class: 'form-control' %>
    </div>

  <%= f.submit class: 'btn btn-info' %>
<% end %>

<%= link_to "Back", destinations_path %>
