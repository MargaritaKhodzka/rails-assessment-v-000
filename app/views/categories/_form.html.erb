<%= render 'layouts/form_messages', object: @category %>
  <%= form_for ([@destination, @category]) do |f| %>
  <%#= f.hidden_field :destination_ids %>

  <div class="form-group">
  <%= f.label :title, 'Title' %>
  <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :climate, 'Climate' %>
  <%= f.text_field :climate, class: 'form-control' %>
  </div>

  <div class="form-group">
  <%= f.label :must_have_items, 'Must Have Items' %>
  <%= f.text_field :must_have_items, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn-btn-info' %>
<% end %>
