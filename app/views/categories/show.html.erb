<h2 class="title"><%= @category.title %> category</h2>
<p class="climate">Climate: <%= @category.climate %></p>
<p class="must_have_items">Must have items: <%= @category.must_have_items %></p>

<h3>See destinations in this category:</h3>
  <div id="destinations">
    <%= render (@destinations) %>
  </div>
<br><br>

<div class="edit-link">
  <%= link_to "Edit", edit_category_path(@category) %>
</div>

<div class="delete-link">
  <%= link_to "Delete", category_path(@category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
</div>

<%= javascript_include_tag "categories" %>

<%= link_to 'Back', categories_path %>
