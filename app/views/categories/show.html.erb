<a href="#" class="js-next" data-id="<%= @category.id %>">Next Category</a>

<h2 class="title"><%= @category.title %> category</h2>
<p class="climate">Climate: <%= @category.climate %></p>
<p class="must_have_items">Must have items: <%= @category.must_have_items %></p>

<h3>See destinations in this category:</h3>

<div id="doIn"></div>
<ul><%= render(@destinations) %></ul>

<%= link_to 'Edit', edit_category_path(@category) %> - <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %> - <%= link_to 'Back', categories_path(@category) %>

<%= javascript_include_tag "categories" %>
